FROM node:18

ARG BACKEND_URL
ARG FRONTEND_URL
ARG STATIC_FILES_URL_SEGMENT
ARG PROJECT_ATTACHMENTS_URL_SEGMENT

WORKDIR /usr/app

ENV NEXT_PUBLIC_BACKEND_URL=${BACKEND_URL}
ENV NEXT_PUBLIC_FRONTEND_URL=${FRONTEND_URL}
ENV NEXT_PUBLIC_STATIC_FILES_URL_SEGMENT=${STATIC_FILES_URL_SEGMENT}
ENV NEXT_PUBLIC_PROJECT_ATTACHMENTS_URL_SEGMENT=${PROJECT_ATTACHMENTS_URL_SEGMENT}

COPY package*.json ./

RUN npm ci

COPY . .

RUN npm run build

EXPOSE 3000

CMD ["npm", "run", "start"]